generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donation {
  id        Int      @id @default(autoincrement())
  name      String
  amount    Float
  method    String
  reference String? 
  createdAt DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now())
}
